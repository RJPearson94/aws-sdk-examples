{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "ES2020",
		"noImplicitAny": true,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"noUnusedLocals": true
	},
	"exclude": ["dist", "./esbuild.js", "./jest.config.js"]
}
